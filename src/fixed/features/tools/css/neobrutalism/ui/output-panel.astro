---
import Button from '@/shared/ui/base/button.astro';
---

<div class='output-panel'>
  <div class='output-header'>
    <h2>Preview & Code</h2>

    <div class='tab-group'>
      <button
        class='tab-button active'
        id='preview-tab'
        data-tab='preview'>
        Preview
      </button>
      <button
        class='tab-button'
        id='css-tab'
        data-tab='css'>
        CSS
      </button>
      <button
        class='tab-button'
        id='html-tab'
        data-tab='html'>
        HTML
      </button>
    </div>
  </div>

  <!-- Preview Panel -->
  <div
    class='tab-panel active'
    id='preview-panel'>
    <div class='preview-container'>
      <div class='preview-background'>
        <div
          id='button-preview'
          class='button-preview'>
          <!-- Single Button Preview -->
        </div>
      </div>

      <div class='preview-info'>
        <div class='info-grid'>
          <div class='info-item'>
            <span class='info-icon'>ðŸŽ¨</span>
            <span class='info-text'>Live preview updates as you customize</span>
          </div>
          <div class='info-item'>
            <span class='info-icon'>âš¡</span>
            <span class='info-text'>Real-time CSS and HTML generation</span>
          </div>
          <div class='info-item'>
            <span class='info-icon'>ðŸ“±</span>
            <span class='info-text'>Fully responsive design</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- CSS Panel -->
  <div
    class='tab-panel hidden'
    id='css-panel'>
    <div class='code-container'>
      <div class='code-header'>
        <span class='code-title'>CSS Code</span>
        <div class='code-actions'>
          <Button
            variant='copy'
            size='sm'
            id='copy-css'>
            Copy CSS
          </Button>
        </div>
      </div>
      <textarea
        id='css-output'
        class='code-output'
        readonly
        placeholder='Generated CSS will appear here...'
      ></textarea>
    </div>
  </div>

  <!-- HTML Panel -->
  <div
    class='tab-panel hidden'
    id='html-panel'>
    <div class='code-container'>
      <div class='code-header'>
        <span class='code-title'>HTML Code</span>
        <div class='code-actions'>
          <Button
            variant='copy'
            size='sm'
            id='copy-html'>
            Copy HTML
          </Button>
          <Button
            variant='default'
            size='sm'
            id='copy-both'>
            Copy Both
          </Button>
        </div>
      </div>
      <textarea
        id='html-output'
        class='code-output'
        readonly
        placeholder='Generated HTML will appear here...'
      ></textarea>
    </div>
  </div>

  <!-- Usage Instructions -->
  <div class='usage-section'>
    <h3>How to Use</h3>
    <ol class='usage-list'>
      <li>Customize your button using the controls on the left</li>
      <li>Preview your button in real-time</li>
      <li>Copy the generated CSS and HTML code</li>
      <li>Paste the code into your project</li>
    </ol>

    <div class='tips'>
      <h4>Tips:</h4>
      <ul class='tips-list'>
        <li>Use high contrast colors for better accessibility</li>
        <li>Keep shadow offsets consistent with your design system</li>
        <li>Test hover effects on different devices</li>
        <li>Consider using relative units (em, rem) for responsive design</li>
      </ul>
    </div>
  </div>
</div>

<style>
  .output-panel {
    background: hsl(var(--background));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    min-height: 600px;
  }

  .output-header {
    background: hsl(var(--muted));
    border-bottom: 1px solid hsl(var(--border));
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .output-header h2 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: hsl(var(--foreground));
  }

  .tab-group {
    display: flex;
    background: hsl(var(--background));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    padding: 0.25rem;
  }

  .tab-button {
    padding: 0.5rem 1rem;
    border: none;
    background: transparent;
    border-radius: calc(var(--radius) - 2px);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    color: hsl(var(--muted-foreground));
  }

  .tab-button.active {
    background: hsl(var(--primary));
    color: hsl(var(--primary-foreground));
  }

  .tab-button:hover:not(.active) {
    background: hsl(var(--accent));
    color: hsl(var(--accent-foreground));
  }

  .tab-panel {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .tab-panel.hidden {
    display: none;
  }

  .preview-container {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .preview-background {
    flex: 1;
    background:
      radial-gradient(circle at 20% 50%, rgba(120, 119, 198, 0.3), transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.3), transparent 50%),
      radial-gradient(circle at 40% 80%, rgba(120, 255, 198, 0.3), transparent 50%),
      linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 400px;
    position: relative;
    padding: 2rem;
  }

  .preview-background::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(circle at 1px 1px, rgba(0, 0, 0, 0.03) 1px, transparent 0);
    background-size: 20px 20px;
    pointer-events: none;
  }

  .button-preview {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100px;
  }

  .neobrutalism-preview-button {
    background-color: #ffeb3b;
    color: #000000;
    border: 3px solid #000000;
    border-radius: 8px;
    padding: 12px 24px;
    font-size: 16px;
    font-weight: 700;
    font-family: Arial, sans-serif;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 4px 4px 0 #000000;
    cursor: pointer;
    transition: all 200ms ease;
    text-decoration: none;
    display: inline-block;
    user-select: none;
    position: relative;
  }

  .neobrutalism-preview-button:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 #000000;
  }

  .neobrutalism-preview-button:active {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 #000000;
  }

  /* Ensure hover effects work even when styles are overridden */
  .button-preview .neobrutalism-preview-button:hover {
    transform: translate(-2px, -2px) !important;
  }

  .button-preview .neobrutalism-preview-button:active {
    transform: translate(2px, 2px) !important;
  }

  /* Shake animation for preview */
  @keyframes neobrutalism-shake {
    0%,
    100% {
      transform: translateX(0);
    }
    25% {
      transform: translateX(-2px);
    }
    75% {
      transform: translateX(2px);
    }
  }

  .preview-info {
    padding: 1.5rem;
    background: hsl(var(--muted) / 0.5);
    border-top: 1px solid hsl(var(--border));
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .info-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    background: hsl(var(--background));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    transition: all 0.2s ease;
  }

  .info-item:hover {
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .info-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .info-text {
    font-size: 0.875rem;
    color: hsl(var(--foreground));
    font-weight: 500;
  }

  .code-container {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .code-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.5rem;
    background: hsl(var(--muted) / 0.5);
    border-bottom: 1px solid hsl(var(--border));
  }

  .code-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: hsl(var(--foreground));
  }

  .code-actions {
    display: flex;
    gap: 0.5rem;
  }

  .code-output {
    flex: 1;
    padding: 1.5rem;
    border: none;
    outline: none;
    resize: none;
    background: hsl(var(--background));
    color: hsl(var(--foreground));
    font-family: var(--font-mono);
    font-size: 0.875rem;
    line-height: 1.5;
    min-height: 300px;
  }

  .code-output:focus {
    background: hsl(var(--muted) / 0.3);
  }

  .usage-section {
    padding: 1.5rem;
    background: hsl(var(--muted) / 0.3);
    border-top: 1px solid hsl(var(--border));
  }

  .usage-section h3 {
    margin: 0 0 1rem 0;
    font-size: 1rem;
    font-weight: 600;
    color: hsl(var(--foreground));
  }

  .usage-section h4 {
    margin: 1rem 0 0.5rem 0;
    font-size: 0.875rem;
    font-weight: 600;
    color: hsl(var(--foreground));
  }

  .usage-list,
  .tips-list {
    margin: 0;
    padding-left: 1.5rem;
    color: hsl(var(--muted-foreground));
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .usage-list li,
  .tips-list li {
    margin-bottom: 0.5rem;
  }

  .tips {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid hsl(var(--border));
  }

  :global(.dark) .preview-background {
    background:
      radial-gradient(circle at 20% 50%, rgba(120, 119, 198, 0.2), transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(255, 119, 198, 0.2), transparent 50%),
      radial-gradient(circle at 40% 80%, rgba(120, 255, 198, 0.2), transparent 50%),
      linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
  }

  :global(.dark) .preview-background::before {
    background-image: radial-gradient(
      circle at 1px 1px,
      rgba(255, 255, 255, 0.1) 1px,
      transparent 0
    );
  }

  /* Copy button states */
  :global(.copied) {
    background: hsl(var(--success)) !important;
    color: white !important;
  }

  @media (max-width: 768px) {
    .output-header {
      flex-direction: column;
      align-items: stretch;
      gap: 1rem;
    }

    .tab-group {
      justify-content: center;
    }

    .code-header {
      flex-direction: column;
      align-items: stretch;
      gap: 1rem;
    }

    .code-actions {
      justify-content: center;
    }

    .usage-section {
      padding: 1rem;
    }

    .preview-background {
      min-height: 300px;
      padding: 1rem;
    }

    .info-grid {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }
  }
</style>
