---
import BaseLayout from '@/app/layouts/base-layout.astro';

const title = 'Page Not Found - 404';
const description =
  'The page you are looking for has been removed or relocated. Return to our homepage to continue browsing.';
---

<BaseLayout
  title={title}
  description={description}>
  <main class='not-found-page'>
    <div class='container'>
      <svg
        xmlns='http://www.w3.org/2000/svg'
        viewBox='0 0 362 145'
        class='background-404'>
        <path
          fill='currentColor'
          d='M62.6 142c-2.133 0-3.2-1.067-3.2-3.2V118h-56c-2 0-3-1-3-3V92.8c0-1.333.4-2.733 1.2-4.2L58.2 4c.8-1.333 2.067-2 3.8-2h28c2 0 3 1 3 3v85.4h11.2c.933 0 1.733.333 2.4 1 .667.533 1 1.267 1 2.2v21.2c0 .933-.333 1.733-1 2.4-.667.533-1.467.8-2.4.8H93v20.8c0 2.133-1.067 3.2-3.2 3.2H62.6zM33 90.4h26.4V51.2L33 90.4zM181.67 144.6c-7.333 0-14.333-1.333-21-4-6.666-2.667-12.866-6.733-18.6-12.2-5.733-5.467-10.266-13-13.6-22.6-3.333-9.6-5-20.667-5-33.2 0-12.533 1.667-23.6 5-33.2 3.334-9.6 7.867-17.133 13.6-22.6 5.734-5.467 11.934-9.533 18.6-12.2 6.667-2.8 13.667-4.2 21-4.2 7.467 0 14.534 1.4 21.2 4.2 6.667 2.667 12.8 6.733 18.4 12.2 5.734 5.467 10.267 13 13.6 22.6 3.334 9.6 5 20.667 5 33.2 0 12.533-1.666 23.6-5 33.2-3.333 9.6-7.866 17.133-13.6 22.6-5.6 5.467-11.733 9.533-18.4 12.2-6.666 2.667-13.733 4-21.2 4zm0-31c9.067 0 15.6-3.733 19.6-11.2 4.134-7.6 6.2-17.533 6.2-29.8s-2.066-22.2-6.2-29.8c-4.133-7.6-10.666-11.4-19.6-11.4-8.933 0-15.466 3.8-19.6 11.4-4 7.6-6 17.533-6 29.8s2 22.2 6 29.8c4.134 7.467 10.667 11.2 19.6 11.2zM316.116 142c-2.134 0-3.2-1.067-3.2-3.2V118h-56c-2 0-3-1-3-3V92.8c0-1.333.4-2.733 1.2-4.2l56.6-84.6c.8-1.333 2.066-2 3.8-2h28c2 0 3 1 3 3v85.4h11.2c.933 0 1.733.333 2.4 1 .666.533 1 1.267 1 2.2v21.2c0 .933-.334 1.733-1 2.4-.667.533-1.467.8-2.4.8h-11.2v20.8c0 2.133-1.067 3.2-3.2 3.2h-27.2zm-29.6-51.6h26.4V51.2l-26.4 39.2z'
        ></path>
      </svg>

      <div class='content'>
        <h1 class='title'>Something went wrong</h1>
        <p class='description'>
          Oops! The page you are looking for has been removed or relocated.
        </p>
        <a
          href='/'
          class='back-button'>
          Back Home
        </a>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .not-found-page {
    position: relative;
    min-height: calc(100vh - 80px);
    margin-top: 2.5rem;
  }

  .container {
    position: relative;
    padding: 4rem 1.25rem 0;
  }

  .background-404 {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0.25;
    color: #e5e7eb;
    width: 100%;
    height: auto;
    z-index: 1;
  }

  .content {
    position: relative;
    z-index: 2;
    margin: 0 auto;
    display: flex;
    width: 100%;
    max-width: 48rem;
    flex-direction: column;
    align-items: center;
    padding-top: 14rem;
    text-align: center;
  }

  .title {
    margin-bottom: 1rem;
    font-size: 2.25rem;
    font-weight: 700;
    line-height: 1.2;
    color: #111827;
  }

  .description {
    color: #6b7280;
    margin: 0 auto 1.25rem;
    max-width: 32rem;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .back-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    background-color: #3b82f6;
    color: white;
    text-decoration: none;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.15s ease-in-out;
    border: none;
    cursor: pointer;
  }

  .back-button:hover {
    background-color: #2563eb;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
  }

  .back-button:active {
    transform: translateY(0);
  }

  .back-button:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.3);
  }

  :global(.dark) .title {
    color: #f9fafb;
  }

  :global(.dark) .description {
    color: #9ca3af;
  }

  :global(.dark) .background-404 {
    color: #374151;
  }

  @media (min-width: 640px) {
    .description {
      font-size: 1rem;
    }
  }

  @media (min-width: 768px) {
    .container {
      padding-left: 2.5rem;
      padding-right: 2.5rem;
      padding-top: 5rem;
    }

    .title {
      font-size: 3.75rem;
    }

    .description {
      margin-bottom: 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .description {
      margin-bottom: 2rem;
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .background-404 {
    animation: float 6s ease-in-out infinite;
  }

  .content {
    animation: fadeInUp 0.8s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .back-button:focus-visible {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
</style>
