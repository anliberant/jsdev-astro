---
import { Icon, type AstroComponent } from '@lucide/astro';

type Props = {
  title: string;
  description: string;
  href: string;
  icon: AstroComponent;
};

const { title, description, href, icon: Icon } = Astro.props;
---

<div class='tool-card'>
  <div class='tool-card-wrapper'>
    <div class='tool-card-icon'>
      <Icon size={24} />
    </div>
    <div class='tool-card-content'>
      <a title={title} href={href} class='tool-card-link'>
        <h3 class='tool-card-title'>{title}</h3>
        <p class='tool-card-description'>{description}</p>
      </a>
    </div>
  </div>
</div>

<style>
  .tool-card {
    max-height: fit-content;
    padding: 1rem;
    transition: all 0.2s ease-in-out;
    border: 1px solid hsl(var(--border));
    background-color: hsl(var(--card));
    border-radius: var(--radius);
    cursor: pointer;
  }

  .tool-card:hover {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transform: translateY(-1px);
    border-color: hsl(var(--primary));
  }

  @media (prefers-color-scheme: dark) {
    .tool-card:hover {
      box-shadow: 0 4px 6px -1px rgba(255, 255, 255, 0.1);
    }
  }

  .tool-card-wrapper {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 1rem;
  }

  @media (min-width: 768px) {
    .tool-card-wrapper {
      align-items: center;
    }
  }

  .tool-card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    flex-shrink: 0;
    background-color: hsl(var(--primary) / 0.1);
    border-radius: 0.5rem;
    color: hsl(var(--primary));
  }

  .tool-card-content {
    flex: 1;
    min-width: 0; /* Prevents flex item from overflowing */
  }

  .tool-card-link {
    text-decoration: none;
    color: inherit;
    letter-spacing: -0.015em;
    display: block;
  }

  .tool-card-title {
    margin: 0 0 0.25rem 0;
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.5;
    color: hsl(var(--foreground));
    transition: color 0.2s ease-in-out;
  }

  .tool-card:hover .tool-card-title {
    color: hsl(var(--primary));
  }

  .tool-card-description {
    margin: 0;
    font-size: 0.875rem;
    line-height: 1.5;
    color: hsl(var(--muted-foreground));
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  @media (max-width: 767px) {
    .tool-card-wrapper {
      align-items: flex-start;
    }

    .tool-card-icon {
      width: 2rem;
      height: 2rem;
    }

    .tool-card-title {
      font-size: 1rem;
    }

    .tool-card-description {
      font-size: 0.8125rem;
    }
  }
</style>
