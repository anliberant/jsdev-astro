---
const { id } = Astro.props;
const src = `https://codepen.io/team/codepen/embed/${id}?default-tab=result&theme-id=dark`;
---

<div class='codepen-wrapper'>
  <div class='codepen-container'>
    <iframe
      src={src}
      title='CodePen Embed'
      loading='lazy'
      allowtransparency='true'
      allowfullscreen='true'
      style='width: 100%; height: 100%; border: 0;'
    ></iframe>
  </div>
</div>

<style>
  .codepen-wrapper {
    display: flex;
    justify-content: flex-start;
    margin: 2rem 0;
  }

  .codepen-container {
    width: 100%;
    max-width: 560px;
    aspect-ratio: 4 / 3;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
  }

  .codepen-container iframe {
    display: block;
    width: 100%;
    height: 100%;
  }
</style>
