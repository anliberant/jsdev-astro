---
import { generateToolsBreadcrumbs } from '@/shared/helpers/breadcrumbs.helpers';
import Breadcrumbs from '@/shared/ui/base/breadcrumbs.astro';
import ConverterHeader from '@/shared/ui/converters/converter-header.astro';
import ConverterPanel from '@/shared/ui/converters/converter-panel.astro';
import HeadingBlock from '@/shared/ui/layout/heading-block.astro';

const breadcrumbItems = generateToolsBreadcrumbs('HTML â‡„ Markdown Converter');

const converterOptions = [
  { id: 'bidirectionalOption', label: 'Bidirectional Mode', checked: true },
  { id: 'preserveTablesOption', label: 'Preserve Tables', checked: true },
  { id: 'prettifyOption', label: 'Pretty Format', checked: true },
];
---

<Breadcrumbs
  items={breadcrumbItems}
  class='mt-10'
/>

<HeadingBlock
  title='HTML â‡„ Markdown Converter'
  description='Bidirectional converter between HTML and Markdown with table support and formatting options.'
  class='mt-0'
/>

<ConverterHeader
  options={converterOptions}
  class='mt-10'
/>

<div class='converter-mode-toggle'>
  <label class='mode-switch'>
    <input
      type='checkbox'
      id='modeToggle'
    />
    <span class='slider'></span>
    <span class='mode-labels'>
      <span class='html-to-md'>HTML â†’ Markdown</span>
      <span class='md-to-html'>Markdown â†’ HTML</span>
    </span>
  </label>
</div>

<div class='main-content'>
  <ConverterPanel
    type='input'
    title='HTML Input'
    icon='ðŸ“'
    textareaId='htmlInput'
    placeholder='Paste your HTML or Markdown content here...'
    showSampleButton={true}
    showStats={true}
  />

  <ConverterPanel
    type='output'
    title='Markdown Output'
    icon='ðŸ“„'
    textareaId='markdownOutput'
    placeholder='Converted content will appear here...'
    readonly={true}
    showStats={true}
  />
</div>

<style>
  .converter-mode-toggle {
    margin: 1rem 0;
    text-align: center;
  }

  .mode-switch {
    position: relative;
    display: inline-block;
    width: 300px;
    height: 50px;
  }

  .mode-switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #3b82f6;
    transition: 0.4s;
    border-radius: 25px;
  }

  .slider:before {
    position: absolute;
    content: '';
    height: 42px;
    width: 42px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    transition: 0.4s;
    border-radius: 50%;
  }

  input:checked + .slider {
    background-color: #10b981;
  }

  input:checked + .slider:before {
    transform: translateX(146px);
  }

  .mode-labels {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    transform: translateY(-50%);
    display: flex;
    justify-content: space-between;
    padding: 0 20px;
    font-size: 0.875rem;
    font-weight: 500;
    color: white;
    pointer-events: none;
  }

  .main-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-top: 1rem;
  }

  @media (max-width: 768px) {
    .main-content {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .mode-switch {
      width: 250px;
      height: 40px;
    }

    .slider:before {
      height: 32px;
      width: 32px;
    }

    input:checked + .slider:before {
      transform: translateX(121px);
    }
  }
</style>
