---
import TableGenerator from '@/features/tools/html/table/ui/table-generator.astro';
import { generateToolsBreadcrumbs } from '@/shared/helpers/breadcrumbs.helpers';
import Breadcrumbs from '@/shared/ui/base/breadcrumbs.astro';
import HeadingBlock from '@/shared/ui/layout/heading-block.astro';

const breadcrumbItems = generateToolsBreadcrumbs('HTML Table Generator');

const title = 'HTML Table Generator';
const description =
  'Create responsive HTML tables with ease. Configure rows, columns, styling, and export as HTML or CSV. Perfect for developers and content creators.';
---

<Breadcrumbs
  items={breadcrumbItems}
  class='mt-10'
/>

<HeadingBlock
  title={title}
  description={description}
  class='mt-0'
/>

<TableGenerator />
