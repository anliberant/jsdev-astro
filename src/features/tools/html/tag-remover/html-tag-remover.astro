---
import { generateToolsBreadcrumbs } from '@/shared/helpers/breadcrumbs.helpers';
import Breadcrumbs from '@/shared/ui/base/breadcrumbs.astro';
import ConverterPanel from '@/shared/ui/converters/converter-panel.astro';
import HeadingBlock from '@/shared/ui/layout/heading-block.astro';

const breadcrumbItems = generateToolsBreadcrumbs('HTML Tag Remover');
---

<Breadcrumbs
  items={breadcrumbItems}
  class='mt-10'
/>

<HeadingBlock
  title='HTML Tag Remover'
  description='Remove HTML tags from your content while preserving the text. Configure options to control the removal process.'
  class='mt-0'
/>

<div class='converter-container'>
  <div class='converter-header'>
    <div class='options-group'>
      <div class='checkbox-group'>
        <input
          type='checkbox'
          id='preserveTextOption'
          checked
        />
        <label for='preserveTextOption'>Preserve Text Content</label>
      </div>

      <div class='checkbox-group'>
        <input
          type='checkbox'
          id='preserveWhitespaceOption'
        />
        <label for='preserveWhitespaceOption'>Preserve Whitespace</label>
      </div>

      <div class='checkbox-group'>
        <input
          type='checkbox'
          id='removeSpecificTagsOption'
        />
        <label for='removeSpecificTagsOption'>Remove Specific Tags Only</label>
      </div>

      <div class='checkbox-group'>
        <input
          type='checkbox'
          id='convertEntitiesOption'
          checked
        />
        <label for='convertEntitiesOption'>Convert HTML Entities</label>
      </div>
    </div>

    <div class='action-buttons'>
      <button
        type='button'
        class='btn btn-convert'
        id='convertBtn'>
        🔄 Convert
      </button>
      <button
        type='button'
        class='btn btn-clear'
        id='clearBtn'>
        🗑 Clear
      </button>
      <button
        type='button'
        class='btn btn-copy'
        id='copyBtn'>
        📋 Copy
      </button>
    </div>
  </div>

  <div
    class='tag-list-container'
    id='tagListContainer'
    style='display: none;'>
    <label for='tagListInput'>Tags to Remove (comma-separated):</label>
    <input
      type='text'
      id='tagListInput'
      placeholder='e.g., div, span, script, style'
      class='tag-list-input'
    />
    <small class='tag-list-help'>
      Enter tag names separated by commas. Only these tags will be removed.
    </small>
  </div>

  <div class='main-content'>
    <ConverterPanel
      type='input'
      title='HTML Input'
      icon='📝'
      textareaId='htmlInput'
      placeholder='Paste your HTML content here...'
      showSampleButton={true}
      showStats={true}
    />

    <ConverterPanel
      type='output'
      title='Text Output'
      icon='📄'
      textareaId='textOutput'
      placeholder='Clean text will appear here...'
      readonly={true}
      showStats={true}
    />
  </div>
</div>

<script>
  import { HtmlTagRemoverController } from './lib/remover-controller';

  document.addEventListener('DOMContentLoaded', function () {
    console.log('DOM loaded, initializing HTML Tag Remover...');

    try {
      const controller = new HtmlTagRemoverController();
      console.log('HTML Tag Remover initialized successfully');
    } catch (error) {
      console.error('Error initializing HTML Tag Remover:', error);
    }
  });
</script>

<style>
  .converter-container {
    margin-top: 2.5rem;
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    background: hsl(var(--background));
    overflow: hidden;
  }

  .converter-header {
    background: hsl(var(--muted));
    border-bottom: 1px solid hsl(var(--border));
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .options-group {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .checkbox-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .checkbox-group input[type='checkbox'] {
    width: 1rem;
    height: 1rem;
    accent-color: hsl(var(--primary));
  }

  .checkbox-group label {
    font-size: 0.875rem;
    color: hsl(var(--foreground));
    cursor: pointer;
    white-space: nowrap;
  }

  .action-buttons {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
    padding: 0.5rem 0.75rem;
    border-radius: var(--radius);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
    text-decoration: none;
  }

  .btn-convert {
    background: #3b82f6;
    color: white;
  }

  .btn-convert:hover {
    background: #2563eb;
  }

  .btn-clear {
    background: hsl(var(--secondary));
    color: hsl(var(--secondary-foreground));
  }

  .btn-clear:hover {
    background: hsl(var(--secondary) / 0.8);
  }

  .btn-copy {
    background: #10b981;
    color: white;
  }

  .btn-copy:hover {
    background: #059669;
  }

  .tag-list-container {
    padding: 1rem 1.5rem;
    background: hsl(var(--muted) / 0.5);
    border-bottom: 1px solid hsl(var(--border));
  }

  .tag-list-container label {
    display: block;
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: hsl(var(--foreground));
  }

  .tag-list-input {
    width: 100%;
    padding: 0.5rem 0.75rem;
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    background: hsl(var(--background));
    color: hsl(var(--foreground));
    font-size: 0.875rem;
  }

  .tag-list-input:focus {
    outline: none;
    border-color: hsl(var(--primary));
    box-shadow: 0 0 0 2px hsl(var(--primary) / 0.2);
  }

  .tag-list-help {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.75rem;
    color: hsl(var(--muted-foreground));
  }

  .main-content {
    display: flex;
    height: calc(100vh - 200px);
    max-height: 600px;
    min-height: 400px;
  }

  @media (max-width: 768px) {
    .converter-header {
      flex-direction: column;
      gap: 1rem;
      align-items: stretch;
    }

    .options-group {
      justify-content: center;
      gap: 1rem;
    }

    .action-buttons {
      justify-content: center;
    }

    .main-content {
      flex-direction: column;
      height: auto;
      min-height: 600px;
    }

    .checkbox-group label {
      font-size: 0.8125rem;
    }
  }

  @media (max-width: 480px) {
    .options-group {
      flex-direction: column;
      align-items: stretch;
      gap: 0.75rem;
    }

    .checkbox-group {
      justify-content: space-between;
    }
  }
</style>
