  .html-pane {
    flex: 1;
    display: flex;
    flex-direction: column;
    background: white;
    overflow: hidden;
  }

  .editor-pane {
    border-right: 1px solid #e2e8f0;
  }

  .preview-pane {
    border-right: 1px solid #e2e8f0;
  }

  .html-pane {
    background: #f8fafc;
  }

  .editor-pane.full-width,
  .preview-pane.full-width,
  .html-pane.full-width {
    flex: none;
    width: 100%;
  }

  .hidden {
    display: none !important;
  }

  .editor {
    width: 100%;
    height: 100%;
    padding: 1.5rem;
    font-family: var(--font-mono);
